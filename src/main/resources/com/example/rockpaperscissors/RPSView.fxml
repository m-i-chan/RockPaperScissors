<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.text.Font?>
<GridPane alignment="CENTER" vgap="10" hgap="10" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.rockpaperscissors.RPSController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>


    <Text text="Rock Paper Scissors"
          GridPane.columnIndex="1" GridPane.rowIndex="0"
          GridPane.halignment="CENTER">
          <font>
                <Font name="Papyrus" size="16"/>
          </font>
    </Text>

    <Button fx:id="rock" text="Rock"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.halignment="CENTER"
            onAction="#onRockClick">
    </Button>

    <Button fx:id="paper" text="Paper"
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            GridPane.halignment="CENTER"
            onAction="#onPaperClick">
    </Button>

    <Button fx:id="scissors" text="Scissors"
            GridPane.columnIndex="2" GridPane.rowIndex="1"
            GridPane.halignment="CENTER"
            onAction="#onScissorsClick">
    </Button>

    <Label fx:id="userPick"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           alignment="CENTER"
           prefWidth="150">
    </Label>

    <Label fx:id="cpuPick"
           GridPane.columnIndex="2" GridPane.rowIndex="2"
           alignment="CENTER"
           prefWidth="150">
    </Label>

    <Label fx:id="result"
           GridPane.columnIndex="1" GridPane.rowIndex="3"
           GridPane.halignment="CENTER">
    </Label>

    <Label fx:id="record" text="0 - 0 - 0"
           GridPane.columnIndex="1" GridPane.rowIndex="4"
           GridPane.halignment="CENTER"
           alignment="CENTER">
    </Label>

    <Button fx:id="reset" text="Reset"
            GridPane.columnIndex="1" GridPane.rowIndex="5"
            GridPane.halignment="CENTER"
    onAction="#onResetClick">
    </Button>
</GridPane>
